        <Label x:Name="labelAPcv_Copy" Content="GPS Port" Canvas.Left="419" Canvas.Top="201"/>
        <TextBox x:Name="textBox" Canvas.Left="493" Canvas.Top="207" Text="" TextWrapping="Wrap" Width="55"/>
        <Label x:Name="labelGpsFile" Content="GPS File" Canvas.Left="64" Canvas.Top="202"/>
        <TextBox x:Name="textBox1" Canvas.Left="122" Canvas.Top="207" IsEnabled="False" TextWrapping="Wrap" Width="152"/>
